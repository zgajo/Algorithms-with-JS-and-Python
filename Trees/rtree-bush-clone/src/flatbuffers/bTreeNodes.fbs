namespace Map.Node;

struct Short {
  k: short;
}

table String {
  k: string;
}

union Key {
  Short, String
}

table BTreeLeafNode {
  id: double;
  lat: double;
  lon: double;
  part_of_ways: [double];
  points_to: [double];
  distance: [float];
}

table BTreeNode {
  keys: [double];
  values: [BTreeLeafNode];  
  is_shared: bool = false;
  children: [BTreeNode];
}

/** BTree of Nodes **/
table BNodesTree {
  size: double;
  max_node_size: double;
  root: BTreeNode;
}

root_type BNodesTree;